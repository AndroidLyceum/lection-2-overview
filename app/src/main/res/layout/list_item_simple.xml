<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/list_item_margin_top"
    android:layout_marginBottom="@dimen/list_item_margin_bottom"
    android:layout_marginLeft="@dimen/list_item_margin_left"
    android:layout_marginRight="@dimen/list_item_margin_right"
    android:paddingTop="@dimen/list_item_padding_top"
    android:paddingBottom="@dimen/list_item_padding_bottom"
    android:paddingLeft="@dimen/list_item_padding_left"
    android:paddingRight="@dimen/list_item_padding_right"
    android:background="@android:color/white"
    >
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/list_item_simple.headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/text_size_headline"
        android:textColor="@color/colorTextPrimary"
        tools:text="[Headline]"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/list_item_simple.subheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/subheading_margin_top"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/text_size_subheading"
        android:textColor="@color/colorTextSecondary"
        tools:text="[Subheading]"
        />
</LinearLayout>